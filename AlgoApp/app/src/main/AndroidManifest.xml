<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.utkin.anton">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyCustomTheme" >

        <activity android:name=".AlgorithmsListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <activity
            android:name=".AlgorithmDescriptionActivity"
            android:label="@string/app_name" >
        </activity>

        <provider android:name="com.utkin.anton.AlgorithmsProvider"
            android:authorities="com.utkin.anton.AlgorithmsProvider">
        </provider>

    </application>

</manifest>
